<h1 class="text-center my-5">Register</h1>

<form action="/register" method="post" class="p-5 me-auto" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label for="name">Name</label>
        <input name="name" type="text" class="form-control" id="name" aria-describedby="name"
            placeholder="Enter Your Name" />
    </div>
    <div class="form-group mb-3">
        <label for="des">Email</label>
        <input name="email" type="email" class="form-control" id="name" aria-describedby="emailHelp"
            placeholder="Enter Your Email" />
    </div>
    <div class="form-group mb-3">
        <label for="mobile">Mobile</label>
        <input name="mobile" type="text" class="form-control" id="mobile" aria-describedby="mobile"
            placeholder="Enter Your Mobile No" />
    </div>
    <div class="form-group mb-3">
        <label for="ProfilePic">ProfilePic</label>
        <input type="file" name="profilePic" id="profilePic">
        <!-- <input name="profilePic" type="file" class="form-control" id="profilePic" aria-describedby="profilePic"
            placeholder="Upload Your Profile Pic" /> -->
    </div>
    <div class="form-group mb-3">
        <label for="price">Password</label>
        <input type="text" name="password" class="form-control" id="password" aria-describedby="emailHelp"
            placeholder="Enter Your Password" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Register</button>
</form>

<% if(typeof message !=='undefined' ) { %>
    <h3>
        <%= message %>
    </h3>
    <% } %>